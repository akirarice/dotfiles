#!/bin/sh
[ -n "$1" ] && mon=$1 || mon=0
folder=$(printf "Media\\nDownloads\\nrepos\\n.config\\n.local\\n." | dmenu -m $mon -h 40 -i)

[ -n "$folder" ] || exit

selection=$(find "$folder" | dmenu -m $mon -h 40 -l 20)

[ -n "$selection" ] || exit

[ -d "$selection" ] && cd "$selection" && "$TERMINAL" && exit

case "$selection" in
	*mkv|*webm|*mp4|*gif)
		setsid -f mpv -quiet "$selection" >/dev/null 2>&1 ;;
	*png|*jpg|*jpe|*jpeg|*gif)
		sxiv "$selection" ;;
	*pdf|*cbz|*cbr)
		zathura "$selection" ;;
	*)
		[ -f "$selection" ] && setsid -f "$TERMINAL" -e "$EDITOR" "$selection" >/dev/null 2>&1
esac
