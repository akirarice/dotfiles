#!/bin/sh
repl=$(grep "<li>" "$HOME/Website/akiranakano/blogindex.html" | sed 5q | tr -d '\n' | sed -e 's/[\/&]/\\&/g')
sed -i "s/<!--BLOG-->.*/<!--BLOG-->$repl/g" ~/Website/akiranakano/index.html

rsync -avrP --delete-after --rsh='ssh' ~/Website/akiranakano/ root@akiranakano.xyz:/var/www/akiranakano/
