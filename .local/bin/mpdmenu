#!/bin/sh
[ -n "$1" ] && mon=$1 || mon=0
artist=$(mpc list artist | dmenu -m $mon -h 40 -i -p "Artist") 
[ -n "$artist" ] || exit
album=$(mpc list album artist "$artist" | dmenu -m $mon -h 40 -i -p "Album")
[ -n "$album" ] || exit
selection=$(mpc find album "$album" | sort)  
mpc clear
printf "%s" "$selection" | mpc add
mpc play
